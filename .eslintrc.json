{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ],
  "rules": {
    "semi": [1, "always"],
    "indent": [1, 2],
    "comma-dangle": [1, "always-multiline"],
    "quotes": [1, "single"],
    "eol-last": [1, "always"]
  }
}
